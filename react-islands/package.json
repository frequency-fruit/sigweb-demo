{
  "name": "react-islands",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build:core": "tsc -b && vite build",
    "build:samples": "tsc -b && cross-env VITE_BUILD_SAMPLES=true vite build",
    "build": "pnpm run build:core && pnpm run build:samples",
    "format": "prettier --write .",
    "lint": "eslint .",
    "preview": "vite preview",
    "test": "pnpm run build && playwright test",
    "test:ui": "playwright test --ui",
    "test:json": "playwright test --reporter=json > test-results/results.json"
  },
  "dependencies": {
    "lucide-react": "^0.574.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@playwright/test": "^1.58.2",
    "@tailwindcss/vite": "^4.2.0",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "cross-env": "^10.1.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-prettier": "^5.5.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "eslint-plugin-tailwindcss": "4.0.0-beta.0",
    "globals": "^16.5.0",
    "http-server": "^14.1.1",
    "prettier": "^3.8.1",
    "prettier-plugin-organize-imports": "^4.3.0",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "tailwindcss": "^4.2.0",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.48.0",
    "vite": "^7.3.1"
  }
}
