# EditorConfig helps maintain consistent coding styles between different editors and IDEs
# https://editorconfig.org/
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# Makefiles use tabs
[Makefile]
indent_style = tab

# Keep two-space indentation for common web formats
[*.{js,jsx,ts,tsx,json,css,scss,html}]
indent_size = 2

# YAML/Markdown conventions
[*.{yml,yaml}]
indent_size = 2

# Don't trim trailing spaces in Markdown (they can be meaningful for line breaks)
[*.md]
trim_trailing_whitespace = false

# Ensure shell scripts stay LF on all platforms
[*.sh]
end_of_line = lf
